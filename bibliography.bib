  author = {Maramis, Christos and Ioakimidis, Ioannis and Kilintzis, Vassilis and Stefanopoulos, Leandros and Lekka, Eirini and Papapanagiotou, Vasileios and Diou, Christos and Delopoulos, Anastasios and Kassari, Penio and Charmandari, Evangelia and Maglaveras, Nikolaos},
