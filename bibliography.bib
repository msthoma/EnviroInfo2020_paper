}

@article{songAutomaticPavementCrack2019,
  title = {Automatic {{Pavement Crack Detection}} and {{Classification Using Multiscale Feature Attention Network}}},
  author = {Song, Weidong and Jia, Guohui and Jia, Di and Zhu, Hong},
  year = {2019},
  volume = {7},
  pages = {171001--171012},
  abstract = {Pavement crack detection and characterization is a fundamental part of road intelligent maintenance systems. Due to the high non-uniformity of cracks, topological complexity, and similar noise from crack texture, the challenge arises in this domain with automated crack detection and classification in a complex environment. In this work, an overarching framework for a universal and robust automatic method that simultaneously characterizes the type of crack and its severity level was developed. For crack detection, we propose a novel and efficient crack detection network that captures the crack context information by establishing a multiscale dilated convolution module. On this foundation, an attention mechanism is introduced to further refine the high-level features. Moreover, the rich features at different levels are fused in an upsampling module to generate more detailed crack detection results. For crack classification, a novel characterization algorithm is developed to classify the type of crack after detection. The crack segment branches are then merged and classified into four types: transversal, longitudinal, block, and alligator; the severity levels of cracks are assessed by calculating the average width and distance between the crack branches. The proposed crack detection method effectively detects crack information in a complex environment, and achieves the current state-of-the-art accuracy. Compared to manual classification results, the classification accuracy of transversal and longitudinal cracks is higher than 95\%, and the classification accuracy of block and alligator is above 86\%.},
  journal = {IEEE Access},
  keywords = {attention mechanism,characterization algorithm,Classification algorithms,condition monitoring,Convolution,convolutional neural nets,convolutional neural network,crack classification,crack context information,crack detection,crack detection network,crack segment branches,feature extraction,Feature extraction,high-level features,image classification,image resolution,maintenance engineering,multiscale dilated convolution module,multiscale feature attention network,multiscale feature extraction,pavement crack classification,pavement crack detection,Pavement crack detection,road building,road intelligent maintenance systems,Roads,Semantics,structural engineering computing,Surface cracks,Task analysis}
}

